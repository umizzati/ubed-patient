<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/appointment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#A001"
        style="@style/listHeader" />

    <TextView
        android:id="@+id/appointment_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ahmad"
        android:textAlignment="textStart"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appointment_specialist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orthopedic"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/appointment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/status_pending"
            android:text="Pending"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14sp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/appointment_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dr. Umi Izzati"
        android:textSize="14sp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/appointment_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: Wed, 17 April 2019, 2.00 PM"
        android:textSize="12sp"
        android:paddingBottom="15dp" />

</LinearLayout>