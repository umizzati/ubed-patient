<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix">

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="#P-001"-->
        <!--android:textSize="14sp"-->
        <!--android:paddingTop="15dp" />-->

    <TextView
        android:id="@+id/bed_wad_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bed A-09-01"
        android:textSize="20sp"
        android:paddingTop="15dp"
        fontPath="fonts/Montserrat-Bold.ttf"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/bed_wad_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orthopedic"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/bed_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/status_pending"
            android:text="Pending"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14sp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/bed_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start: Wed, 17 April 2019, 2.00 PM"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End: Wed, 17 April 2019, 2.00 PM"
        android:textSize="12sp"
        android:paddingBottom="15dp"/>

</LinearLayout>