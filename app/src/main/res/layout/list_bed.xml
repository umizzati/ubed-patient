<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/bed_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#001"
        style="@style/listHeader"/>

    <TextView
        android:id="@+id/bed_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient: Muhammad"/>

    <TextView
        android:id="@+id/bed_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wad: Class A (RM150.00)"/>

    <TextView
        android:id="@+id/bed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bed: A-09-01"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/bed_wad_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clinic: Orthopedic"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/bed_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor: Dr Azmi"/>

    <TextView
        android:id="@+id/bed_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/status_pending"
        android:text="Pending"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="14sp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/bed_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start: Wed, 17 April 2019, 2.00 PM"
        android:textSize="12sp"/>

    <!--<TextView-->
        <!--android:id="@+id/bed_end_date"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="End: Wed, 17 April 2019, 2.00 PM"-->
        <!--android:textSize="12sp"-->
        <!--android:paddingBottom="15dp"/>-->

</LinearLayout>